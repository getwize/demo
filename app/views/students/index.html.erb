<h4 class="title">Students</h4>

<%= link_to 'New Student', new_student_path, class: "btn btn-primary" %>

<table class="table">
  <thead class="text-primary">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td><%= student.phone_number %></td>
      <td>
        <!-- Single button -->
        <div class="btn-group">
          <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Show', student %></li>
            <li><%= link_to 'Edit', edit_student_path(student) %></li>
            <li><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

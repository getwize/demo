
<h4 class="title">Student Profile</h4>

<%= link_to '<i class="material-icons">edit</i> Edit'.html_safe, edit_student_path, class: "btn btn-primary" %>
<%= link_to '<i class="material-icons">navigate_before</i> Back'.html_safe, owner_path, class: "btn btn-primary" %>

<%= form_for(@student) do |f| %>

<label class="control-label">First Name</label>
<%= f.text_field :first_name, class: "form-control" %>

<label class="control-label">Last Name</label>
<%= f.text_field :last_name, class: "form-control" %>	

<label class="control-label">Email</label>
<%= f.email_field :email, class: "form-control" %>

<label class="control-label">Phone Number</label>
<%= f.text_field :phone_number, class: "form-control" %>

<label class="control-label">Street Address</label>
<%= f.text_field :street_address, class: "form-control" %>

<label class="control-label">City</label>
<%= f.text_field :city, class: "form-control" %>

<label class="control-label">State</label>
<%= f.text_field :state, class: "form-control" %>

<label class="control-label">Zip</label>
<%= f.text_field :zip, class: "form-control" %>

<label class="control-label">Emergency Contact</label>
<%= f.text_field :emergency_contact_name, class: "form-control" %>

<label class="control-label">Emergency Contact Number</label>
<%= f.text_field :emergency_contact_phone, class: "form-control" %>

<label class="control-label">Relationship</label>
<%= f.text_field :emergency_contact_relationship, class: "form-control" %>

<label class="control-label">Allergies / Medical</label>
<%= f.text_field :emergency_medical_info, class: "form-control" %>

<label class="control-label">Belt Size</label>
<%= f.text_field :belt_size, class: "form-control" %>

<label class="control-label">Uniform Size</label>
<%= f.text_field :uniform_size, class: "form-control" %>

<label class="control-label">Birthday</label>
<%= f.date_field :birthday, class: "form-control datetimepicker" %>

<% end %>